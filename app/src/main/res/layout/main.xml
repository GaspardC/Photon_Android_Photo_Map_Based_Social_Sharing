<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

    >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_top"
        >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#2ea3fe"/>

        <FrameLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/titlebar_menu_selector"
                    android:id="@+id/title_bar_left_menu"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/com_facebook_blue"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_middle_top"
                android:layout_gravity="center|right"

                >
                <Button
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/delete"
                    android:id="@+id/delete_right_menu"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/com_facebook_blue"
                    />

                <EditText
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:id="@+id/hashtags_text_view"
                    android:hint="@string/slogan"
                    android:textSize="24sp"
                    android:textColor="@color/grayColorTextHint"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorLightBlue"
                    android:selectAllOnFocus="false"
                    android:layout_marginRight="10dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"

                />
            <Button
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/search_button_selector"
                android:id="@+id/search_right_menu"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/com_facebook_blue"
                />


            </LinearLayout>

            <!--<Button-->
                    <!--android:layout_width="28dp"-->
                    <!--android:layout_height="28dp"-->
                    <!--android:background="@drawable/titlebar_menu_selector"-->
                    <!--android:id="@+id/title_bar_right_menu"-->
                    <!--android:layout_gravity="right|center_vertical"-->
                    <!--android:layout_marginRight="10dp"/>-->
        </FrameLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ebebeb"/>

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/main_fragment">
    </FrameLayout>

</LinearLayout>


