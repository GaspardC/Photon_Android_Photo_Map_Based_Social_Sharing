<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

    >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_top"
        >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#2ea3fe"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/title_bar_left_menu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/titlebar_menu_selector"
                android:backgroundTint="@color/com_facebook_blue" />

        </FrameLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_middle_top"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:layout_gravity="center"

                >
                <Button
                    android:layout_marginRight="15dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/icon_camera"
                    android:id="@+id/camera_post"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/com_facebook_blue"
                    />


                    <EditText
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:id="@+id/hashtags_text_view"
                        android:hint="try to search for some #hastags"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/grayColorTextHint"
                        android:backgroundTint="@color/colorLightBlue"
                        android:selectAllOnFocus="false"
                        android:inputType="text"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"
                        android:gravity="end"

                        />
                    <Button
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/delete"
                        android:id="@+id/delete_right_menu"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:backgroundTint="@color/com_facebook_blue"
                        />

            </LinearLayout>

        </LinearLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ebebeb"/>

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/main_fragment">
    </FrameLayout>

</LinearLayout>


