<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ch.epfl.tabletlab.photon.DetailsActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:elevation="0dp"
        app:popupTheme="@style/AppTheme.Light" />

    <ImageView
        android:layout_weight="14"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/imageViewDetailed"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_weight="16"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewHashtagDetailed"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="77dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            >

            <Button
                android:layout_marginRight="5dp"
                android:layout_weight="6"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="0dp"
                android:maxWidth="10dp"
                android:layout_width="wrap_content"
                android:text="+1"
                android:onClick="addLike"
                android:layout_gravity="center"
                android:background="@drawable/photo_like_button_with_white"
                android:id="@+id/buttonLike" />
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/likes"
            android:id="@+id/textViewLikes"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"

                />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewTextDetailed"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="77dp"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="by Author"
        android:id="@+id/textViewAuthorDetailed"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="11dp"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>
